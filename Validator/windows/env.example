# This is an example file. Copy this to .env and fill in your actual values.
# Do NOT commit the .env file to version control.

# --- Repository URLs ---
# These are the repositories that the setup script will clone.
FRONTEND_REPO=https://github.com/peviitor-ro/validator-ui.git
BACKEND_REPO=https://github.com/peviitor-ro/scraper_Api.git

# --- PostgreSQL Database ---
# These credentials are used by Docker Compose to set up the database container.
POSTGRES_DB=validator
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# --- Django Settings ---
# Django application settings
DEBUG=True
SECRET_KEY=django-insecure-change-this-in-production

# Database settings for Django (must match PostgreSQL settings above)
DB_NAME=validator
DB_USER=postgres
DB_PASSWORD=postgres
DB_HOST=db
DB_PORT=5432

# Email settings (optional)
EMAIL_HOST_USER=your_email@gmail.com
EMAIL_HOST_PASSWORD=your_email_password

# --- Solr Configuration ---
# Solr is optional but required for job search functionality
DATABASE_SOLR=http://localhost:8983
DATABASE_SOLR_USERNAME=admin
DATABASE_SOLR_PASSWORD=admin

# --- Frontend Configuration ---
# URL where the frontend is accessible (for email links and CORS)
FRONTEND_URL=http://localhost:3000

# --- Django Superuser ---
# These credentials will be used by the create_superuser.py script.
DJANGO_SUPERUSER_EMAIL=admin@example.com
DJANGO_SUPERUSER_PASSWORD=your_super_secret_password

VITE_BASE_URL=http://localhost:8000
VITE_BASE_WS_URL=ws://localhost:8000

VITE_RECAPTCHA_KEY=your_recaptcha_key_here